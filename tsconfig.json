{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}